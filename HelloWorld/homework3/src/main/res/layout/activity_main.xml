<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liner_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.homework3.MainActivity">

    <com.example.homework3.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list1"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/to_list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list2"
        android:textAllCaps="false"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/name"/>

    <Button
        android:id="@+id/alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="对话框"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/setting_text_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="设置文字"
            android:textSize="15sp"
            android:textColor="#000"/>
    </LinearLayout>


</LinearLayout>
